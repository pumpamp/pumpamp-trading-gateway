# PumpAmp Connection
PUMPAMP_API_KEY=pa_live_xxxxxxxxxxxx
PUMPAMP_HOST=api.pumpamp.com
PUMPAMP_PAIRING_ID=                    # Saved after `pumpamp-gateway pair <code>`

# Kalshi (optional -- only if you trade on Kalshi)
KALSHI_API_KEY=your-kalshi-api-key
KALSHI_PRIVATE_KEY_PATH=./kalshi-key.pem

# Polymarket (optional)
POLYMARKET_PRIVATE_KEY=0x...
POLYMARKET_API_KEY=...
POLYMARKET_API_SECRET=...
POLYMARKET_API_PASSPHRASE=...

# Hyperliquid (optional)
HYPERLIQUID_PRIVATE_KEY=0x...

# Binance (optional)
BINANCE_API_KEY=...
BINANCE_API_SECRET=...

# Gateway Settings
CANCEL_ON_SHUTDOWN=false
LOG_LEVEL=info

# Auto-Trade Strategy (both must be set to enable)
# AUTO_TRADE_ENABLED=true
# STRATEGY_CONFIG_PATH=./strategy.json
